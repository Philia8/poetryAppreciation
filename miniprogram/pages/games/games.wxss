.container {
    height: 100%;
    background-color: #ffffff;
}
.top{
    height: 20%;
    width: 100%;
    position: relative;
}
.top .score{
    font-size: 60rpx;
    font-weight: bolder;
    position: fixed;
    top: 100rpx;
    left: 100rpx;
}
.poem-container{
    position: fixed;
    top: 200rpx;
    left: 100rpx;
    height: 300rpx;
    line-height: 100rpx;
    font-size: 40rpx;
}
.ans-input{
    display: flex;
    position: fixed;
    bottom: 500rpx;
    left: 100rpx;
    height: 150rpx;
}
.ans-input input{
    width: 280rpx;
    height: 30rpx;
    line-height: 20rpx;
    padding-left: 10rpx;
    color: #888888;
    border: 2rpx solid #888888;
}
.ans-input button{
    margin-left: 10rpx;
    height: 60rpx;
    background-color: rgba(100, 100, 100, .5);
    color: #ffffff;
}
.poem-detail{
    position: fixed;
    bottom: 200rpx;
    left: 50%;
    transform: translateX(-50%);
}