/* 页面整体设置 */

.search-show {
    padding: 30rpx;
    background-color: #fff;
}
.poems{
    padding: 30rpx;
    background-color: #fff;
}
.poems-item{
    line-height: 60rpx;
    font-size: 26rpx;
    border-bottom: 6rpx solid #f2f2f2;
}
.init{
    display: none;
}
.find{
    width: 100%;
    height: 200rpx;
    font-size: 60rpx;
    color: #b4adad;
    font-weight: bolder;
    text-align: center;
    line-height: 200rpx;
}
.wait{
    width: 100%;
    height: 200rpx;
    font-size: 60rpx;
    color: #b4adad;
    font-weight: bolder;
    text-align: center;
    line-height: 200rpx;
    animation: wait;
    transition: color 3s linear;
}
@keyframes wait{
    from{
        color: #f2f2f2;
    }
    33% {
        color: #f6f6f6;
    }
    66% {
        color: #f8f8f8;
    }
    to{
        color: #fff;
    }
}