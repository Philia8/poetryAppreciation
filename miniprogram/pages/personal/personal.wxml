<view class="main" bindtap="test">
    <!-- 用户头像和昵称 -->
    <view class="avatarContianer">
        <view class="avatar">
            <image src="{{userInfos.avatarUrl}}"></image>
            <view class="nickname">{{userInfos.nickName}}</view>
        </view>
    </view>

    <!-- 签到 -->
    <view  bindtap="check">
        <item wx:if="{{!isChecked}}" class="signIn" propFunc="签到" icon=">"></item>
        <item wx:else class="signIn check" propFunc="已签到"  icon="√"></item>    
    </view>
    <!-- 个人积分 -->
    <item class="grade" propFunc="个人积分"  icon=">"></item>
