.poetryMain {
    background-color: #F4F4F4;
    padding: 20rpx;
}


/* 诗词详情 */

.poetry {
    height: auto;
    background-color: #fff;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}


/* 诗名 */

.poetry .title {
    font-weight: bolder;
    font-size: 42rpx;
    margin-top: 20rpx;
}


/* 朝代及作者 */

.dy-au {
    display: flex;
    margin-top: 10rpx;
}

.dy-au .dynasty {
    margin: 0 20rpx;
}

.poetry .content {
    padding: 30rpx;
}

/* 诗人详情、诗词赏析列表 */
.details{
    margin-top: 15rpx;
    height: 70rpx;
    line-height: 70rpx;
    background-color: #fff;
}
.details .type{ 
    display: flex;
    justify-content: space-around;
    transition: border-bottom 100ms linear;
    border-bottom: 6rpx solid transparent;
}

.typeActive{
    border-bottom: 6rpx solid hotpink;
}

