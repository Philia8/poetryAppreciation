/* 注释及赏析 */

.more {
    margin-top: 15rpx;
    background-color: #fff;
    font-size: 28rpx;
}
.describe .descItem {
    margin-top: 15rpx;
    border-bottom: 8rpx solid #f4f4f4;
    padding: 10rpx;
}
.describe .itemTitle {
    font-size: 30rpx;
    font-weight: bolder;
}
.describe .hidden{
