@import "/static/icon/fontAwesome.wxss";
/* 诗词分类 */

.categoryContainer {
    margin-top: 40rpx;
    padding: 10rpx;
    /* background-color: #F4F4F4; */
}


/* 头部 */

.categoryContainer {
    background-color: #fff;
}

.categoryHeader {
    display: flex;
    height: 50rpx;
    line-height: 50rpx;
    justify-content: space-between;
    color: #353535;
}
/* 诗词分类滚动 */

.categoryScroll {
    display: flex;
    height: 260rpx;
    /* background-color: rosybrown; */
    margin-top: 10rpx;
}

.categoryScroll .scrollItem {
    width: 200rpx;
    height: 260rpx;
    margin-right: 35rpx;
    /* box-shadow: 0 0 5rpx 5rpx rgba(0, 0, 0, .2); */
    border-radius: 20rpx;
}

.scrollItem image {
    width: 175rpx;
    height: 175rpx;
    border-radius: 20rpx;
}

.scrollItem .name {
    line-height: 50rpx;
    font-size: 26rpx;
    text-align: center;
}